<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mid360">
<link name="imu_base_link">
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry >
            <box size="0.03 0.03 0.03" />
        </geometry>
        </visual>
        <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry >
            <box size="0.03 0.03 0.03" />
        </geometry>
        </collision>   
        <inertial>
            <mass value="1"/>
            <inertia ixx="1e-4" iyy="1e-4" izz="1e-4" ixy="0" ixz="0" iyz="0"/>
        </inertial> 
    </link>

    <gazebo reference="imu_base_link">
        <material>Gazebo/Green</material>
        <turnGravityOff>true</turnGravityOff>
    </gazebo>

    <joint name="imu_platform_joint" type="fixed">
        <parent link="base_test_link"/>
        <child link="imu_base_link"/>
        <origin xyz="0.05 0 -0.01" rpy="0 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <gazebo reference="imu_base_link">
      <material>Gazebo/Green</material>
        <turnGravityOff>true</turnGravityOff>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
        <maxVel>0.01</maxVel>
        <sensor name="imu_sensor" type="imu">
            <always_on>true</always_on>
            <update_rate>100</update_rate>
            <visualize>true</visualize>
            <topic>/livox/imu</topic>
            <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
                <gravity>true</gravity>
                <topicName>/livox/imu</topicName>         
                <bodyName>imu_base_link</bodyName>
                <updateRateHZ>500.0</updateRateHZ>    
                <gaussianNoise>0.00329</gaussianNoise>   
                <xyzOffset>0 0 0</xyzOffset>     
                <rpyOffset>0 0 0</rpyOffset>
                <frameName>imu_link</frameName>        
            </plugin>
            <pose>0 0 0 0 0 0</pose>
        </sensor>
    </gazebo>
</robot>